<!DOCTYPE html>
<% if(messages.error || messages.notice) { %>
   <div style="margin-top: 100px;" class="alert alert-<%= messages.error ? 'danger' : 'warning' %> alert-dismissible fade show" role="alert">
     <button type="button" class="close" data-dismiss="alert" aria-label="Close">
       <span aria-hidden="true">&times;</span>
     </button>
 
   <% if(messages.error) { %>
     Validation errors:
     <ul>
       <% messages.error.forEach((err) => { %>
         <li><%= `${err.param} ${err.msg}` %></li>
       <% }) %>
     </ul>
     <% } else { %>
       <p><%= messages.notice %></p>
     <% } %>
   </div>
 <% } %>